---
const base = import.meta.env.BASE_URL;
---

<header id="matrix-header" class="w-full border-b border-[#003B00] bg-black/80 backdrop-blur-sm sticky top-0 z-50">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="flex items-center justify-end h-16">
      <nav class="flex items-center gap-6 sm:gap-8 text-sm tracking-widest" aria-label="Main">
        <a href={base} class="text-[#00FF41] hover:text-white hover:underline decoration-[#00FF41] underline-offset-4 decoration-2 transition-all">[ MODULES ]</a>
        <a href={base + 'agents/'} class="text-[#00FF41] hover:text-white hover:underline decoration-[#00FF41] underline-offset-4 decoration-2 transition-all">[ AGENTS ]</a>
      </nav>
    </div>
  </div>
</header>
