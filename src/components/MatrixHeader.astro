---
const base = import.meta.env.BASE_URL;
---

<header class="w-full border-b border-[#003B00] bg-black/80 backdrop-blur-sm sticky top-0 z-50">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="flex items-center justify-between h-16">
      <div class="flex items-center gap-2">
        <i data-lucide="terminal" class="w-6 h-6 animate-pulse" aria-hidden="true"></i>
        <a href={base} class="text-xl tracking-widest font-bold text-[#00FF41] hover:text-white transition-colors">
          CURSOR_WORKSHOP<span class="animate-pulse">_</span>
        </a>
      </div>
      <nav class="hidden md:block" aria-label="Main">
        <ul class="flex space-x-8 text-sm tracking-widest">
          <li><a href="#" class="hover:text-white hover:underline decoration-[#00FF41] underline-offset-4 decoration-2 transition-all">[ SYSTEM_CORE ]</a></li>
          <li><a href={base} class="hover:text-white hover:underline decoration-[#00FF41] underline-offset-4 decoration-2 transition-all">[ MODULES ]</a></li>
          <li><a href="#" class="hover:text-white hover:underline decoration-[#00FF41] underline-offset-4 decoration-2 transition-all">[ AGENTS ]</a></li>
          <li><a href="#" class="hover:text-white hover:underline decoration-[#00FF41] underline-offset-4 decoration-2 transition-all">[ DATABASE ]</a></li>
        </ul>
      </nav>
      <div class="hidden md:flex items-center">
        <button type="button" class="matrix-btn px-4 py-1 text-xs font-bold">
          INITIALIZE_LOGIN
        </button>
      </div>
      <div class="md:hidden">
        <button type="button" class="text-[#00FF41] hover:text-white p-2" aria-label="Open menu">
          <i data-lucide="menu" class="w-6 h-6"></i>
        </button>
      </div>
    </div>
  </div>
</header>
