---
const base = import.meta.env.BASE_URL;
---

<header id="matrix-header" class="w-full border-b border-[#00FF41]/20 bg-black/80 backdrop-blur-sm sticky top-0 z-50">
  <div class="max-w-7xl mx-auto px-8 py-6 flex justify-end">
    <nav class="flex items-center gap-8 text-sm tracking-widest" aria-label="Main">
      <a href={base} class="text-[#00FF41] hover:text-white hover:shadow-[0_0_10px_#00FF41] transition-all duration-300">[ MODULES ]</a>
      <a href={base + 'agents/'} class="text-[#00FF41] hover:text-white hover:shadow-[0_0_10px_#00FF41] transition-all duration-300">[ AGENTS ]</a>
    </nav>
  </div>
</header>
