---
interface Props {
  goal: string;
  estimatedTime: string;
  /** Mission or intent line (e.g. "Get access to GitHub and familiarize yourself with GitHub basics."). */
  mission?: string;
  summary?: string;
}

const { goal, estimatedTime, mission, summary } = Astro.props;
---

<div class="module-goal-panel" role="region" aria-labelledby="module-goal-heading">
  <div class="flex items-center gap-2 mb-4 border-b border-[#00FF41]/30 pb-2 w-fit">
    <i data-lucide="terminal" class="w-4 h-4 text-[#00FF41]" aria-hidden="true"></i>
    <h2 id="module-goal-heading" class="module-goal-panel__heading text-xs font-bold uppercase tracking-[0.2em] text-[#00FF41]">Module Overview</h2>
  </div>
  <div class="space-y-3">
    <div class="grid grid-cols-1 md:grid-cols-[140px_1fr] gap-2 md:gap-4">
      <span class="module-goal-panel__term text-dim text-sm uppercase">Goal</span>
      <span class="module-goal-panel__value text-sm text-[#00FF41]">{goal}</span>
    </div>
    <div class="grid grid-cols-1 md:grid-cols-[140px_1fr] gap-2 md:gap-4">
      <span class="module-goal-panel__term text-dim text-sm uppercase">Estimated time</span>
      <span class="module-goal-panel__value text-sm text-[#00FF41]">{estimatedTime}</span>
    </div>
    {mission && (
      <div class="grid grid-cols-1 md:grid-cols-[140px_1fr] gap-2 md:gap-4">
        <span class="module-goal-panel__term text-dim text-sm uppercase">Mission</span>
        <span class="module-goal-panel__value text-sm text-[#00FF41]">{mission}</span>
      </div>
    )}
    {summary && (
      <div class="grid grid-cols-1 md:grid-cols-[140px_1fr] gap-2 md:gap-4">
        <span class="module-goal-panel__term text-dim text-sm uppercase">Summary</span>
        <span class="module-goal-panel__value text-sm text-[#00FF41]">{summary}</span>
      </div>
    )}
  </div>
</div>
