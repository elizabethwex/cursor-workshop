---
import contributorsData from "../data/contributors.json";
import { getContributorWallHtml } from "../lib/contributor-wall-html";

const baseUrl = (import.meta.env.BASE_URL ?? "/").replace(/\/$/, "") || "/";
const listItemsHtml = getContributorWallHtml(contributorsData, baseUrl);
---

<section class="contributor-wall" aria-label="Contributors">
  <h2 class="contributor-wall-title">Contributors</h2>
  <ul class="contributor-wall-list" set:html={listItemsHtml} />
</section>
