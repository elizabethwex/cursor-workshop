---
interface Props {
  id: string;
  icon: string;
  title: string;
  description: string;
  href?: string;
}

const { id, icon, title, description, href = '#' } = Astro.props;
---

<div class="matrix-card group p-6 flex flex-col h-full relative overflow-hidden rounded-sm">
  <div class="absolute top-0 right-0 p-2 opacity-50 text-[10px] text-[#008F11]" aria-hidden="true">{id}</div>
  <div class="w-12 h-12 border border-[#00FF41] flex items-center justify-center mb-6 group-hover:bg-[#00FF41] group-hover:text-black transition-colors text-[#00FF41]">
    <i data-lucide={icon} class="w-6 h-6" aria-hidden="true"></i>
  </div>
  <h3 class="text-xl font-bold mb-3 text-[#00FF41] group-hover:underline decoration-2 underline-offset-4 decoration-[#00FF41]">{title}</h3>
  <p class="text-sm text-[#008F11] mb-6 flex-grow leading-relaxed">
    {description}
  </p>
  <a href={href} class="inline-flex items-center text-xs tracking-widest hover:text-white uppercase text-[#00FF41] no-underline">
    Access_Module <span class="ml-2">&gt;&gt;</span>
  </a>
  <div class="absolute bottom-0 right-0 w-3 h-3 border-b border-r border-[#00FF41]" aria-hidden="true"></div>
  <div class="absolute top-0 left-0 w-3 h-3 border-t border-l border-[#00FF41]" aria-hidden="true"></div>
</div>
