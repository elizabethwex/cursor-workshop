---
interface Props {
  title?: string;
}

const { title = "Cursor Workshop | Blue Pill" } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{title}</title>
    <script src="https://cdn.tailwindcss.com/3.4.17" is:inline></script>
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin="" />
    <link href="https://fonts.googleapis.com/css2?family=Share+Tech+Mono&family=VT323&display=swap" rel="stylesheet" />
    <style is:global>
      :root {
        --matrix-red: #ff0040;
        --matrix-red-dark: #8f0022;
        --matrix-black: #0d0d0d;
      }

      body {
        background-color: #000;
        color: var(--matrix-red);
        font-family: 'Share Tech Mono', monospace;
        overflow-x: hidden;
        cursor: text;
      }

      ::-webkit-scrollbar {
        width: 8px;
      }
      ::-webkit-scrollbar-track {
        background: #000;
        border-left: 1px solid var(--matrix-red-dark);
      }
      ::-webkit-scrollbar-thumb {
        background: var(--matrix-red-dark);
      }
      ::-webkit-scrollbar-thumb:hover {
        background: var(--matrix-red);
      }

      ::selection {
        background: var(--matrix-red);
        color: black;
        text-shadow: none;
      }

      .font-terminal {
        font-family: 'VT323', monospace;
      }

      .red-neon-text {
        text-shadow: 0 0 5px var(--matrix-red), 0 0 10px var(--matrix-red);
      }
    </style>
  </head>
  <body class="min-h-screen flex flex-col relative">
    <slot />
  </body>
</html>
